! ----------------------------------------------------
! --> Colors
! ----------------------------------------------------
!#include ".colors/solarized/solarized-dark"
#include ".colors/base16/base16-ocean.dark.256.xresources"

! ----------------------------------------------------
! --> fonts
! ----------------------------------------------------
Xft.antialias: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hinting: true
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

! ---------------------------------------------------
! --> Rofi
! ---------------------------------------------------
rofi.opacity: 90
rofi.lines: 5
rofi.terminal: xfce4-terminal
rofi.font: Fira Mono Medium 14
rofi.padding: 10
rofi.bw: 0
rofi.width: 50
rofi.levenshtein-sort: false
rofi.separator-style: solid
rofi.hide-scrollbar: true

! ----------------------------------------------------
! --> Urxvt terminal
! ----------------------------------------------------
URxvt*geometry: 100x28
URxvt*borderless: 1
URxvt*fadding: 0
URxvt*transparent: false

! font configuration
#define fontsize 10
#define antial true

#define dejavu    xft:DejaVu Sans Mono:size=10:antialias=antial
#define dejaPower xft:DejaVu Sans Mono for Powerline:size=10:antialias=antial

#define droid    xft:Droid Sans Mono:size=fontsize:antialias=antial
#define drdPower xft:Droid Sans Mono for Powerline:size=fontsize:antialias=antial

URxvt*font:           dejavu,devaPower
URxvt*boldFont:       dejavu:Bold,dejaPower
URxvt*italicFont:     dejavu:Italic,dejaPower
URxvt*bolditalicFont: dejavu:Bold:Italic,dejaPower
! fix letter spacing issue
URxvt*letterSpace: -1

URxvt*scrollBar: false
URxvt*saveLines: 2000
! do not scroll with output
URxvt*scrollTtyOutput: false
! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true
! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true
! Scrolling on alternate screens
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

URxvt*urgentOnBell: true

!! perl extensions
URxvt.perl-ext-common: default,url-select,clipboard,matcher,keyboard-select

URxvt.keysym.M-u:       perl:url-select:select_next
URxvt.keysym.M-Escape:  perl:keyboard-select:activate
URxvt.keysym.M-s:       perl:keyboard-select:search

URxvt.url-select.underline: true
URxvt.url-select.launcher: firefox
URxvt.url-select.autocopy: true
URxvt.url-select.button: 2

URxvt.iso14755: False
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.clipboard.copycmd:  xclip -i
URxvt.clipboard.pastecmd: xclip -o

!---------------------------------------------------------
! --> Xterm
!---------------------------------------------------------
xterm*termName:         xterm-256color
xterm*locale:           true
xterm*utf8:             true
xterm*borderWidth:      0
xterm*VT100.geometry:   110x28
xterm*faceName:         Droid Sans Mono:style=Regular:size=9
xterm*scrollTtyOutput:  true
xterm*scrollBar:        false
xterm*ScrollKey:        true
xterm*jumpScroll:       true
xterm*multiScroll:      true
xterm*saveLines:        2500
xterm*selectToClipboard: true


