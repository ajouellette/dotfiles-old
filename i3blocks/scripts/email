#!/bin/bash
#
# If new emails are present, displays icon with number

new=$(~/.local/bin/check-email.sh -q)

if [ $new -gt 0 ]; then
    echo "ï« $new"
    echo 
    echo "#FFF600"
    
    # launch mutt if clicked
    case $BLOCK_BUTTON in
        1) termite --title="floating (mail)" -e mutt;;
    esac
fi


